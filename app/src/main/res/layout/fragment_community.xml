<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

<!-- 대표 색상코드 : #87CEEB-->





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="IT"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="프로그래밍"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold">

            </TextView>


            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >


            </Spinner>



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"></EditText>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/search"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >

            </ImageView>

        </LinearLayout>

        <View
            android:layout_width="420dp"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"

            android:background="#87CEEB"

            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="최근에 사람들이 많이 궁금해 하는 질문"
                    android:textSize="23dp"
                    android:textColor="@color/black"
                    android:textStyle="bold">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/quenstion_titletest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:text="Q. 프레임워크와 라이브러리 차이점이 무엇인가요?">
                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/wonder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="나도 궁금해요 : "
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"

                            ></TextView>

                        <TextView
                            android:id="@+id/wondernum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="3"
                            android:textColor="#ff0000"
                            android:layout_marginTop="10dp"

                            ></TextView>

                        <TextView
                            android:id="@+id/qtdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="2022-11-10"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"

                            ></TextView>

                        <TextView
                            android:id="@+id/qtwriter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="인하공돌이"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"

                            ></TextView>






                    </LinearLayout>

                </LinearLayout>



                <View
                    android:layout_width="420dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="10dp"

                    android:background="#87CEEB"

                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listtest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>



            </LinearLayout>


        </ScrollView>






    </LinearLayout>

</FrameLayout>